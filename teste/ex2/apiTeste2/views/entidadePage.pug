extends layout

block content
    .w3-card-4
        header.w3-container.w3-teal
            h1 Entidade #{lContratos.length > 0 ? lContratos[0].entidade_comunicante : ''} N: #{lContratos.length > 0 ? lContratos[0].NIPC_entidade_comunicante : ''}

        .w3-container
            table.w3-table-all
                thead
                    tr
                        th ID Contrato
                        th Objeto do Contrato
                        th Data de Celebração
                        th Preço Contratual
                        th NIPC Entidade Comunicante
                        th Entidade Comunicante
                tbody
                    each contrato in lContratos
                        tr
                            td
                                a(href="/" + contrato._id)= contrato._id
                            td= contrato.objectoContrato
                            td= contrato.dataCelebracaoContrato
                            td= contrato.precoContratual
                            td
                                a(href="/entidades/" + contrato.NIPC_entidade_comunicante)= contrato.NIPC_entidade_comunicante
                            td= contrato.entidade_comunicante

            footer.w3-container.w3-teal 
            address 
                span Gerado por EngWeb2024 em #{d} - [
                a(href="/") Voltar
                span ]
