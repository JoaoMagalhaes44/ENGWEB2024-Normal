extends layout 

block content 
        .w3-card-4 
            header.w3-container.w3-teal 
                h1 Contrato #{contrato._id}

            .w3-container 
                ul.w3-ul.w3-card-4(style="width:50%") 
                    li 
                    b ID Contrato: #{contrato._id}
                    li 
                    b Anúncio: #{contrato.nAnuncio}
                    li 
                    b Tipo de Procedimento: #{contrato.tipoprocedimento}
                    li 
                    b Objeto do Contrato: #{contrato.objectoContrato}
                    li 
                    b Data de Publicação: #{contrato.dataPublicacao}
                    li 
                    b Data de Celebração do Contrato: #{contrato.dataCelebracaoContrato}
                    li 
                    b Preço Contratual: #{contrato.precoContratual}
                    li 
                    b Prazo de Execução: #{contrato.prazoExecucao}
                    li 
                    b NIPC da Entidade Comunicante: #{contrato.NIPC_entidade_comunicante}
                    li 
                    b Entidade Comunicante: #{contrato.entidade_comunicante}
                    li 
                    b Fundamentação: #{contrato.fundamentacao}

            footer.w3-container.w3-teal 
            address 
                span Gerado por EngWeb2024 em #{d} - [
                a(href="/") Voltar
                span ]
